#Employee_class_test


#This program tests the Employee class.
import EmployeeMain


def main():
    #Get the employee data.
    Name=input("Please enter new employee name:\t")   
    Employee_ID = input("Please enter new employee ID number:\t")
    Department= input("Please enter new employee department name:\t")
    Title= input("Please enter new employee job position:\t")
    Salary= float(input("Please enter new employee annual salary:\t"))

    

    #Create an instance of the Employee class.
    Person=EmployeeMain.EmployeeClass(Name,Employee_ID,Department,Title,Salary)

    #Display the data that was entered.
    print('\n\n******************************\n\n')
    print('Here is the data that you entered:')
    print('Name:', Person.get_AddName())
    print('Employee_ID:', Person.get_AddEmployee_ID())
    print('Department:', Person.get_AddDepartment())
    print('Title:', Person.get_AddTitle())
    print('Salary: $', format(Person.get_AddSalary(), ',.2f'), sep='')
    
# Call the main function.
main()
    
    
    

